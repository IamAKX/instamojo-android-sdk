<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="spinnerStyle">@style/Base.Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="SdkTheme" parent="@style/BaseTheme" />

    <style name="PaymentOptionButton">
        <item name="android:clickable">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:paddingBottom">@dimen/margin_10</item>
        <item name="android:padding">@dimen/margin_16</item>
    </style>

    <style name="checkBoxStyle">
        <item name="colorAccent">@color/check_box_color</item>
    </style>
</resources>
